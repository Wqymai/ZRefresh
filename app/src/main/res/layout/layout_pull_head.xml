<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/pull_back" />

    <ImageView
        android:id="@+id/iv_back2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/pull_back" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/rider"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pull_rider" />

        <ImageView
            android:id="@+id/left_wheel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/pull_wheel" />

        <ImageView
            android:id="@+id/right_wheel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/left_wheel"
            android:src="@drawable/pull_wheel" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/sun"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/main"
        android:src="@drawable/pull_sun" />



</RelativeLayout>